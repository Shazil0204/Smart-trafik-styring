{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Blazor Server App",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0/SmartTraficControlSystem.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Attach to Blazor Server App",
      "type": "coreclr",
      "request": "attach",
      "processName": "SmartTraficControlSystem"
    },
    {
      "name": "Docker: Attach to .NET Core",
      "type": "coreclr",
      "request": "attach",
      "processName": "SmartTrafficControlSystemFrontend",
      "sourceFileMap": {
        "/app": "${workspaceFolder}/SmartTrafficControlSystemFrontend"
      },
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "smart_traffic_frontend"],
        "debuggerPath": "/vsdbg/vsdbg",
        "pipeCwd": "${workspaceFolder}",
        "quoteArgs": false
      }
    }
  ]
}
