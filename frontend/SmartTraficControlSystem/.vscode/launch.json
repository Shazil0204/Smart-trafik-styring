  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to .NET Core",
      "type": "coreclr",
      "request": "attach",
      "processName": "SmartTrafficControlSystemFrontend",
      "sourceFileMap": {
        "/app": "${workspaceFolder}/SmartTrafficControlSystemFrontend"
      },
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "reelixdocker-dev-api-1"], // TODO: Change this
        "debuggerPath": "/vsdbg/vsdbg",
        "pipeCwd": "${workspaceFolder}",
        "quoteArgs": false
      },
      "args": ["--interpreter=vscode"]
    }
  ]
}
