@using SmartTraficControlSystem.Components.PopUp

@inherits LayoutComponentBase
@inject IDialogService DialogService

<MudThemeProvider Theme="@_selectedTheme.Value" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Secondary" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3" Color="Color.Default">Smart Traffic Control System</MudText>
        <MudSpacer />

        <MudIconButton Color="Color.Dark" Icon="@Icons.Material.Filled.AccountCircle" Size="Size.Large"
            OnClick="@((e) => OpenLoginDialog())" />

    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    

    bool _drawerOpen = false;

    private Task OpenLoginDialog()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        return DialogService.ShowAsync<UserAccessDialog>("Simple Dialog", options);
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private readonly KeyValuePair<string, MudTheme> _selectedTheme = new KeyValuePair<string, MudTheme>("Default", new
    DefaultTheme());

    private readonly Dictionary<string, MudTheme> _theme = new Dictionary<string, MudTheme>
{
{ "Default", new MudTheme() },
};
}